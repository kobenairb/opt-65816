{
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true
    },
    "[makefile]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false
    },
    "[doxyfile]": {
        "editor.formatOnSave": false
    },
    "[asm]": {
        "editor.formatOnSave": false
    },
    "C_Cpp.clang_format_style": "{BasedOnStyle: WebKit, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4, NamespaceIndentation: All, FixNamespaceComments: false, BreakBeforeBinaryOperators: NonAssignment, AlignAfterOpenBracket: Align, AlignOperands: true, AlignConsecutiveAssignments: true, AlignConsecutiveDeclarations: false, PointerAlignment: Right, AlignTrailingComments: true}",
    "C_Cpp.dimInactiveRegions": true,
    "C_Cpp.vcFormat.indent.preserveWithinParentheses": false,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "files.associations": {
        "*.def": "c",
        "algorithm": "c",
        "atomic": "c",
        "ctype.h": "c",
        "opt-816.h": "c",
        "stdlib.h": "c",
        "time.h": "c",
        "Doxyfile": "doxyfile",
        "*.ps": "asm"
    },
    "files.trimTrailingWhitespace": true,
    "makefile.ignoreDirectoryCommands": false,
    "python.languageServer": "Pylance",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "keyword.mnemonic",
                "settings": {
                    //"foreground": "#848484"
                }
            },
            {
                "scope": "keyword.xkas.command.concatenate",
                "settings": {
                    "foreground": "#848484"
                }
            },
            {
                "scope": "keyword.xkas.snes",
                "settings": {
                    "foreground": "#8eda92",
                    "fontStyle": "italic underline"
                }
            },
            {
                "scope": "keyword.xkas.asm",
                "settings": {
                    "foreground": "#6a6ac5"
                }
            },
            {
                "scope": "keyword.xkas.define",
                "settings": {
                    "foreground": "#6a6ac5"
                }
            },
            {
                "scope": "constant.xkas.numeric.hexvalue",
                "settings": {
                    "foreground": "#6a6ac5"
                }
            },
            {
                "scope": "constant.xkas.numeric.decvalue",
                "settings": {
                    "foreground": "#62ca4d"
                }
            },
            {
                "scope": "constant.xkas.numeric.binvalue",
                "settings": {
                    "foreground": "#945656"
                }
            },
            {
                "scope": "constant.xkas.numeric.address",
                "settings": {
                    "foreground": "#a86bcc"
                }
            },
            {
                "scope": "label.xkas.sublabel.reference",
                "settings": {
                    "foreground": "#FFAC3D",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "label.xkas.sublabel",
                "settings": {
                    "foreground": "#5484ec",
                    //"fontStyle": "bold"
                }
            },
            {
                "scope": "label.xkas.label.reference",
                "settings": {
                    "foreground": "#bb4d5c",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "label.xkas.label",
                "settings": {
                    "foreground": "#bb4d5c",
                    //"fontStyle": "bold"
                }
            },
            {
                "scope": "variable.xkas.storage.register",
                "settings": {
                    "foreground": "#3CB3FD"
                }
            }
        ]
    }
}